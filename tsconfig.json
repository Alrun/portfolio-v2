{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src"
    ]
}
